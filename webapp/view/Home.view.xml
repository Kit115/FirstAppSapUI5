<mvc:View
    controllerName="sap.ui.selfmade.appOne.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core = "sap.ui.core"
>   
    
        <Panel
            headerText=""
        > 
            <Table
                id="productTable"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
                        path : 'productModel>/Products',
                        sorter : {
                            path: 'Supplier',
                            group: true,
                            descending: false
                        }
                    }"
            > 
                <headerToolbar> 
                    <Toolbar> 
                        <Title text="Products:" titleStyle="H1"/> 
                        <ToolbarSpacer/> 
                        <Text text="Editable:"/> 
                        <Switch customTextOn=" " customTextOff=" " state="{productTemplate>/ProductEditable}"/> 
                        <Text text="Sort By:"/> 
                        <Select
                            id="select"
                            enabled="true"
                            editable="true"
                            forceSelection="false"
                            selectedKey="{productTemplate>/SortBy}"
                            change="onSelectChange"
                        > 
                            <core:Item key="Supplier" text="Supplier"/>
                            <core:Item key="Category" text="Category"/>
                            <core:Item key="InStock" text="InStock"/>
                            <core:Item key="Price" text="Price"/>
                    
                        </Select>  
                        <ToggleButton icon="sap-icon://sort" press=".onToggleDescending"/> 
                        <ToggleButton id="toggleGroup" icon="sap-icon://group-2" press=".onToggleGroup" pressed="true"/> 
                        <Button text="Add Product" press=".onOpenDialog"/> 
                    </Toolbar> 
                </headerToolbar> 

                <columns>
                    <Column width="7em">
                        <Text text="ProductID"/> 
                    </Column>  
                    <Column >
                        <Text text="Name"/> 
                    </Column>  
                    <Column>
                        <Text text="Category"/> 
                    </Column>  
                    <Column>
                        <Text text="Supplier"/> 
                    </Column>  
                    <Column>
                        <Text text="In Stock"/> 
                    </Column>  
                    <Column hAlign="End">
                        <Text text="Price"/> 
                    </Column>  
                </columns> 

                <items> 
                    <ColumnListItem
                        type="Navigation" 
                        press="onSelectProduct" 
                    > 
                        <cells> 
                            <!-- 
                                <ObjectIdentifier title="{productModel>ProductName}"/> 
                                <ObjectIdentifier title="{productModel>Category}"/> 
                                <ObjectIdentifier title="{productModel>Supplier}"/> 
                                <ObjectIdentifier title="{= ${productModel>InStock} ? 'In Stock' : 'Out of Stock'}"/>
                                <ObjectNumber number="{productModel>Price} â‚¬" emphasized="true"/> 
                            -->
                            <ObjectNumber number="{productModel>ProductID}" emphasized="false"/> 
                            <Input value="{productModel>ProductName}" valueLiveUpdate="true" width="130px" enabled="{productTemplate>/ProductEditable}"/> 
                            <Input value="{productModel>Category}" valueLiveUpdate="true" width="130px" enabled="{productTemplate>/ProductEditable}"/> 
                            <Input value="{productModel>Supplier}" valueLiveUpdate="true" width="130px" enabled="{productTemplate>/ProductEditable}"/> 
                            <CheckBox selected="{productModel>InStock}" enabled="{productTemplate>/ProductEditable}"/> 
                            <Input value="{productModel>Price}" valueLiveUpdate="true" width="100px" enabled="{productTemplate>/ProductEditable}"/> 
                        </cells> 
                    </ColumnListItem>
                </items> 
            </Table> 
        </Panel> 

</mvc:View> 