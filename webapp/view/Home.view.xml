<mvc:View
    controllerName="sap.ui.selfmade.appOne.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core = "sap.ui.core"
>   

    <Panel
        headerText="Hello this is Text"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <Button id="button1" text="press me!" press=".onButtonPress"/> 
    </Panel> 
    <Panel
        headerText=""
    > 
        <Table
            class="sapUiResponsiveMargin"
            width="auto"
            items="{
                    path : 'productModel>/Products',
                    sorter : {
                        path : 'Category',
                        descending : false,
                        group : true
                    }
                }"
        > 
            <headerToolbar> 
                <Toolbar> 
                    <Title text="{productTemplate>/SortByTest}" titleStyle="H1"/> 
                    <ToolbarSpacer/> 
                    <Button text="add Product" press=".onAddProduct"/> 
                    <Select
                        id="select"
                        enabled="true"
                        editable="true"
                        forceSelection="false"
                        selectedKey="{productTemplate>/SortByTest}"
                        change="onSelectChange"
                    > 
                        <core:Item key="Supplier" text="Supplier"/>
                        <core:Item key="Category" text="Category"/>
                        <core:Item key="InStock" text="InStock"/>
                 
                    </Select>  
                </Toolbar> 
            </headerToolbar> 

            <columns>
                <Column width="7em">
                    <Text text="ProductID"/> 
                </Column>  
                <Column >
                    <Text text="Name"/> 
                </Column>  
                <Column>
                    <Text text="Category"/> 
                </Column>  
                <Column>
                    <Text text="Supplier"/> 
                </Column>  
                <Column>
                    <Text text=""/> 
                </Column>  
                <Column hAlign="End">
                    <Text text="Price"/> 
                </Column>  
            </columns> 

            <items> 
                <ColumnListItem> 
                    <cells> 
                        <ObjectNumber number="{productModel>ProductID}" emphasized="false"/> 
                        <ObjectIdentifier title="{productModel>ProductName}"/> 
                        <ObjectIdentifier title="{productModel>Category}"/> 
                        <ObjectIdentifier title="{productModel>Supplier}"/> 
                        <ObjectIdentifier title="{= ${productModel>InStock} ? 'In Stock' : 'Out of Stock'}"/>
                        <ObjectNumber number="{productModel>Price}" emphasized="true"/> 
                    </cells> 
                </ColumnListItem>
            </items> 
        </Table> 
    </Panel> 

</mvc:View> 